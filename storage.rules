rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profile_pictures/{imageFileName} {
      allow read: if true;
      allow write: if request.auth != null && imageFileName == request.auth.uid + '.jpg';
    }

    match /vans_pictures/{motoristaId}/{imageName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == motoristaId;
    }

    match /vans_pictures/{motoristaId}/{imageFileName} {
      allow read: if true;
      allow write: if request.auth != null
                    && request.auth.uid == motoristaId;
    }
  }
}
